{
    "name": "ernesto-pama/cassandra-bundle",
    "type" : "symfony-bundle",
    "description": "Symfony2 / Symfony 3 bundle on top of datastax/php-driver",
    "keywords": ["cassandra", "bundle", "symfony2", "symfony3"],
    "license" : "MIT",
    "authors": [
        {
            "name": "Hendra Huang",
            "email": "hendrahuang92@gmail.com"
        },
        {
            "name": "Indra Gunawan",
            "email": "hello@indra.my.id"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "ext-cassandra": "*"
    },
    "require-dev": {
        "atoum/atoum": "~2.0",
        "symfony/framework-bundle": "~2.7|~3.0|~4.0",
        "symfony/yaml": "~2.7|~3.0|~4.0",
        "symfony/console": "~2.7|~3.0|~4.0",
        "datastax/php-driver": "v1.3.2"
    },
    "autoload": {
        "psr-4": {
            "CassandraBundle\\": ""
        },
        "exclude-from-classmap": [
            "**/Tests/"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "minimum-stability": "dev"
}
